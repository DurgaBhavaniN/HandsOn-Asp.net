@model EmployeeModel.Models.Employee
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Signup</h1>
@using (Html.BeginForm())
{
<table class="table">
    <tr>
        <td>EID</td>
        <td>@Html.TextBoxFor(m => m.Eid)</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Html.TextBoxFor(m => m.Name)</td>
    </tr>
    <tr>
        <td>Degination</td>
        <td>@Html.DropDownListFor(m => m.Degination, ViewBag.Degination as SelectList)</td>
    </tr>
    <tr>
        <td>Project Name</td>
        <td>@Html.DropDownListFor(m => m.P_Name, ViewBag.P_Name as SelectList)</td>
    </tr>
    <tr>
        <td>Password</td>
        <td>@Html.Password("Pwd")</td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="Register" />
        </td>
    </tr>
</table>
}